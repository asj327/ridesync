# ==========================================
# RideSync Environment Variables
# ==========================================

# 1. Application Settings
# Set to False when deploying to production (Vercel/Render)
DEBUG_MODE=True

# 2. Database Configuration
# Using SQLite for local/hackathon testing. 
# For production, swap this to your PostgreSQL URL (e.g., postgresql://user:password@localhost/dbname)
DATABASE_URL=sqlite:///./ridesync_prod.db

# 3. Decision Engine Constraints
# Tweak these during the hackathon demo if you need matches to happen faster or over a larger area
MAX_POOL_RADIUS_KM=2.5
MAX_WAIT_TIME_MINUTES=10
